{
  "name": "@mettamatt/code-reasoning",
  "version": "0.2.0",
  "description": "Enhanced MCP server for sequential thinking focused on programming tasks with improved debugging",
  "license": "MIT",
  "author": "Matt Westgate <mavatar@gmail.com>",
  "homepage": "https://modelcontextprotocol.io",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mettamatt/code-reasoning.git"
  },
  "type": "module",
  "bin": {
    "code-reasoning": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && chmod +x dist/*.js",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "debug": "node dist/index.js --debug",
    "visualize": "node dist/index.js --debug --visualize",
    "visualize:port": "node dist/index.js --debug --visualize --port",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prepare": "npm run build",
    "test": "node dist/test/test-client.js",
    "test:basic": "node dist/test/test-client.js basic",
    "test:branch": "node dist/test/test-client.js branch",
    "test:revision": "node dist/test/test-client.js revision",
    "test:error": "node dist/test/test-client.js error",
    "test:perf": "node dist/test/test-client.js perf",
    "test:verbose": "node dist/test/test-client.js --verbose",
    "test:save": "node dist/test/test-client.js --save-results"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "0.5.0",
    "chalk": "^5.3.0",
    "express": "^4.18.2",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  }
}
